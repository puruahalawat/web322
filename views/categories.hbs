<div class="row">
    <div class="col-md-12">
        
        <hr /></h2> 
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>                     
                        <th>Category Name</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
                        <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
                      
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#if message}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong> 
    </div>
    {{/if}}
</div>